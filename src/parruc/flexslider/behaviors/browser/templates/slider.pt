<!-- Slider -->
<html xmlns="http://www.w3.org/1999/xhtml" xmlns:metal="http://xml.zope.org/namespaces/metal" xmlns:tal="http://xml.zope.org/namespaces/tal" xmlns:i18n="http://xml.zope.org/namespaces/i18n" i18n:domain="parruc.violareggiocalabria">
  <div id="full-width-slides" tal:define="slides view/slides" tal:condition="slides" class="slider">
    <div class="flexslider">
      <ul class="slides">
        <li tal:repeat="slide_ref slides">
          <tal:block tal:define="slide nocall:slide_ref/to_object">
            <img tal:define="scales slide/@@bwimages" tal:replace="structure python:scales.tag('image', width=1920, height=592, direction='down')"/>
            <div class="caption">
              <div class="container">
                <h1 tal:content="slide/title">Titolo</h1>
                <tal:block tal:define="link nocall:slide/link/to_object|nothing" tal:condition="link">
                    <a tal:attributes="href link/absolute_url" i18n:translate="" class="btn btn-bordered read-more">Leggi</a>
                </tal:block>
              </div>
            </div>
          </tal:block>
        </li>
      </ul>
    </div>
  </div>
</html>
